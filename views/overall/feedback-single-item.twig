<div class="feedbackColumns">
    <div class="col">
        {{ post.meta('photo') | picture }}
    </div>
    <div class="col">
        <h5 class="name">{{ post.name }}</h5>
        <div class="ratingWrapper">
            <div class="rating">
                <span class="layer gray" style="width: {{ 100-(post.rate*10) }}%;">
                    <svg><use xlink:href="{{ svg_sprite }}#iconStar"></use></svg>
                    <svg><use xlink:href="{{ svg_sprite }}#iconStar"></use></svg>
                    <svg><use xlink:href="{{ svg_sprite }}#iconStar"></use></svg>
                    <svg><use xlink:href="{{ svg_sprite }}#iconStar"></use></svg>
                    <svg><use xlink:href="{{ svg_sprite }}#iconStar"></use></svg>
                </span>
                <span class="layer yellow" style="width: {{ post.rate*10 }}%;">
                    <svg><use xlink:href="{{ svg_sprite }}#iconStar"></use></svg>
                    <svg><use xlink:href="{{ svg_sprite }}#iconStar"></use></svg>
                    <svg><use xlink:href="{{ svg_sprite }}#iconStar"></use></svg>
                    <svg><use xlink:href="{{ svg_sprite }}#iconStar"></use></svg>
                    <svg><use xlink:href="{{ svg_sprite }}#iconStar"></use></svg>
                </span>
            </div>
        </div>
        <div class="feedbackText typo">
            {{ post.meta('feedback') }}
        </div>
        {% if post.meta('answer') %}
        <div class="answerWrapper feedbackColumns">
            <div class="col">
                <div class="zhAvatar">Ð–</div>
            </div>
            <div class="col">
                <div class="answerText typo">
                    {{ post.meta('answer') }}
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
