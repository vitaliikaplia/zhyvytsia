<div class="line">
    <div class="col">
        <p>{{ __('Order status', TEXTDOMAIN) }}</p>
    </div>
    <div class="col">
        {% set order_statuses = fn('custom_order_statuses') %}
        <select class="order_status_select" data-post-id="{{ order.id }}">
            <option></option>
            {% for key,val in order_statuses %}
            <option value="{{ key }}"{% if key == order.order_status %} selected="selected"{% endif %}>{{ val }}</option>
            {% endfor %}
        </select>
    </div>
</div>
{% if order.ordered_items %}
<div class="line">
    <div class="col">
        <p>{{ __('Ordered items', TEXTDOMAIN) }}</p>
    </div>
    <div class="col">
        {{ order.ordered_items }}
    </div>
</div>
{% endif %}
{% if order.total_price %}
<div class="line">
    <div class="col">
        <p>{{ __('Total amount', TEXTDOMAIN) }}</p>
    </div>
    <div class="col">
        {{ order.total_price }}
    </div>
</div>
{% endif %}
