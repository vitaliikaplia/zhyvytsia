{% if order_user %}
<div class="line">
    <div class="col">
        <p>{{ __('Registered Order user', TEXTDOMAIN) }}</p>
    </div>
    <div class="col">
        <p><a href="/wp-admin/user-edit.php?user_id={{ order_user.ID }}">{{ order_user.first_name }} {{ order_user.last_name }} (ID#{{ order_user.ID }})</a></p>
    </div>
</div>
{% endif %}
<div class="line note order">
    <p>{{ __('Order note', TEXTDOMAIN) }}</p>
    <textarea name="note" data-post-id="{{ order.id }}">{{ order.note }}</textarea>
</div>
