{% extends "mail/email.twig" %}

{% block email_content %}

<h1>{{ title }}</h1>
<p>{{ __('Let`s verify your email', TEXTDOMAIN) }}</p>
<table role="presentation" border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
    <tbody>
    <tr>
        <td align="left">
            <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                <tbody>
                <tr>
                    <td> <a href="{{ verification_link }}" target="_blank">{{ __('Confirm my Email', TEXTDOMAIN) }}</a> </td>
                </tr>
                </tbody>
            </table>
        </td>
    </tr>
    </tbody>
</table>
<p>{{ __('Or you can use this code to manually verify your email', TEXTDOMAIN) }}: {{ user_email_verification_code }}</p>

{% endblock %}
